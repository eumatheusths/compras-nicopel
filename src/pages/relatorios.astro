---
import Layout from '../layouts/Layout.astro';
import sql from '../lib/db.js';

// 1. Dados para KPI (Indicadores)
const [resumo] = await sql`
    SELECT 
        COALESCE(SUM(CASE WHEN tipo = 'entrada' THEN quantidade ELSE 0 END), 0) as total_entradas,
        COALESCE(SUM(CASE WHEN tipo = 'saida' THEN quantidade ELSE 0 END), 0) as total_saidas
    FROM movimentacoes_estoque
    WHERE date_trunc('month', data_movimentacao) = date_trunc('month', CURRENT_DATE)
`;

// 2. Gastos por Categoria (Gráfico de Pizza)
const gastosCategoria = await sql`
    SELECT c.nome, SUM(ci.valor_total_item) as total
    FROM compra_itens ci
    JOIN produtos p ON ci.produto_id = p.id
    JOIN categorias c ON p.categoria_id = c.id
    GROUP BY c.nome
`;

// 3. Top 5 Itens Mais Consumidos (Gráfico de Barras)
const topConsumo = await sql`
    SELECT p.nome, SUM(m.quantidade) as qtd
    FROM movimentacoes_estoque m
    JOIN produtos p ON m.produto_id = p.id
    WHERE m.tipo = 'saida'
    GROUP BY p.nome
    ORDER BY qtd DESC
    LIMIT 5
`;
---

<Layout title="Relatórios Gerenciais">
    <h1 class="text-2xl font-bold text-slate-800 mb-8">Inteligência de Dados</h1>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white p-6 rounded-lg shadow-sm border border-slate-200">
            <h3 class="text-xs font-bold text-slate-400 uppercase">Itens Consumidos (Mês)</h3>
            <p class="text-3xl font-bold text-slate-700 mt-2">{resumo.total_saidas}</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-sm border border-slate-200">
            <h3 class="text-xs font-bold text-slate-400 uppercase">Itens Comprados (Mês)</h3>
            <p class="text-3xl font-bold text-emerald-600 mt-2">{resumo.total_entradas}</p>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        
        <div class="bg-white p-6 rounded-lg shadow-sm border border-slate-200">
            <h3 class="font-bold text-slate-700 mb-4">Gastos por Categoria</h3>
            <div class="h-64">
                <canvas id="chartCategorias"></canvas>
            </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-sm border border-slate-200">
            <h3 class="font-bold text-slate-700 mb-4">Top 5 Itens Mais Usados</h3>
            <div class="h-64">
                <canvas id="chartConsumo"></canvas>
            </div>
        </div>
    </div>

    <script is:inline define:vars={{ gastosCategoria, topConsumo }}>
        // Gráfico Pizza (Categorias)
        new Chart(document.getElementById('chartCategorias'), {
            type: 'doughnut',
            data: {
                labels: gastosCategoria.map(d => d.nome),
                datasets: [{
                    data: gastosCategoria.map(d => d.total),
                    backgroundColor: ['#3b82f6', '#10b981', '#f59e0b', '#ef4444', '#8b5cf6']
                }]
            },
            options: { maintainAspectRatio: false }
        });

        // Gráfico Barras (Consumo)
        new Chart(document.getElementById('chartConsumo'), {
            type: 'bar',
            data: {
                labels: topConsumo.map(d => d.nome),
                datasets: [{
                    label: 'Quantidade Usada',
                    data: topConsumo.map(d => d.qtd),
                    backgroundColor: '#64748b',
                    borderRadius: 4
                }]
            },
            options: { maintainAspectRatio: false }
        });
    </script>
</Layout>