---
import Layout from '../../layouts/Layout.astro';
import sql from '../../lib/db.js';

// Processar a Baixa
let message = '';
if (Astro.request.method === 'POST') {
    const formData = await Astro.request.formData();
    const produto_id = formData.get('produto_id');
    const quantidade = parseFloat(formData.get('quantidade'));
    const responsavel = formData.get('responsavel');
    const motivo = formData.get('motivo');
    const data_saida = formData.get('data_saida');

    try {
        await sql.begin(async sql => {
            // Log de Saída
            await sql`
                INSERT INTO movimentacoes_estoque 
                (produto_id, tipo, quantidade, origem_destino, responsavel, motivo, data_movimentacao)
                VALUES 
                (${produto_id}, 'saida', ${quantidade}, ${'Uso Interno'}, ${responsavel}, ${motivo}, ${data_saida})
            `;
            // Diminuir Estoque
            await sql`
                UPDATE produtos SET estoque_atual = estoque_atual - ${quantidade} WHERE id = ${produto_id}
            `;
        });
        message = 'Saída registrada! Estoque atualizado.';
    } catch (error) {
        message = 'Erro: ' + error.message;
    }
}

// Só mostra produtos que têm saldo
const produtos = await sql`SELECT id, nome, estoque_atual, unidade_medida FROM produtos WHERE estoque_atual > 0 ORDER BY nome`;
---

<Layout title="Registrar Uso">
    <div class="max-w-xl mx-auto">
        <h1 class="text-2xl font-bold text-slate-800 mb-6">Registrar Saída de Material</h1>

        {message && <div class="bg-blue-50 text-blue-700 p-4 rounded-lg mb-6 border border-blue-200 text-sm">{message}</div>}

        <form method="POST" class="bg-white p-8 rounded-xl shadow-sm border border-slate-200 space-y-6">
            
            <div>
                <label class="block text-sm font-medium text-slate-700 mb-1">Qual produto foi usado?</label>
                <select name="produto_id" required class="w-full border-slate-300 rounded-lg shadow-sm p-2.5 bg-slate-50 text-sm focus:ring-red-500 focus:border-red-500">
                    <option value="">Selecione...</option>
                    {produtos.map(p => (
                        <option value={p.id}>
                            {p.nome} (Saldo: {p.estoque_atual} {p.unidade_medida})
                        </option>
                    ))}
                </select>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1">Qtd Retirada</label>
                    <input type="number" step="0.01" name="quantidade" required class="w-full border-slate-300 rounded-lg shadow-sm p-2.5 text-sm" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1">Data</label>
                    <input type="date" name="data_saida" required value={new Date().toISOString().split('T')[0]} class="w-full border-slate-300 rounded-lg shadow-sm p-2.5 text-sm" />
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-slate-700 mb-1">Responsável / Quem retirou?</label>
                <input type="text" name="responsavel" placeholder="Ex: João da Produção" required class="w-full border-slate-300 rounded-lg shadow-sm p-2.5 text-sm" />
            </div>

            <div>
                <label class="block text-sm font-medium text-slate-700 mb-1">Motivo / Onde será usado?</label>
                <textarea name="motivo" rows="2" placeholder="Ex: Manutenção da máquina 3" class="w-full border-slate-300 rounded-lg shadow-sm p-2.5 text-sm"></textarea>
            </div>

            <div class="pt-4 flex justify-between items-center">
                <a href="/estoque" class="text-sm text-slate-500 hover:text-slate-800">Cancelar</a>
                <button type="submit" class="bg-red-600 text-white px-6 py-2.5 rounded-lg font-bold hover:bg-red-700 transition shadow-lg shadow-red-600/20 text-sm">
                    Confirmar Saída
                </button>
            </div>
        </form>
    </div>
</Layout>