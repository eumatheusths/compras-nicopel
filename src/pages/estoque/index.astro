---
import Layout from '../../layouts/Layout.astro';
import sql from '../../lib/db.js';

// Busca produtos com categoria
const itens = await sql`
    SELECT p.*, c.nome as categoria_nome 
    FROM produtos p
    LEFT JOIN categorias c ON p.categoria_id = c.id
    ORDER BY p.nome ASC
`;
---

<Layout title="Controle de Estoque">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-slate-800">Estoque Atual</h1>
        <div class="flex gap-3">
            <a href="/compras/nova" class="text-slate-600 bg-white border border-slate-300 hover:bg-slate-50 px-4 py-2 rounded-lg text-sm font-medium transition">
                + Comprar (Entrada)
            </a>
            <a href="/estoque/saida" class="bg-red-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-red-700 shadow-lg shadow-red-600/20 transition">
                - Registrar Uso (Saída)
            </a>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <table class="w-full text-left border-collapse">
            <thead class="bg-slate-50 text-slate-500 uppercase text-xs font-bold">
                <tr>
                    <th class="p-4 border-b border-slate-200">Produto</th>
                    <th class="p-4 border-b border-slate-200">Categoria</th>
                    <th class="p-4 border-b border-slate-200 text-right">Estoque</th>
                    <th class="p-4 border-b border-slate-200 text-center">Status</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
                {itens.map((item) => (
                    <tr class="hover:bg-slate-50 transition-colors">
                        <td class="p-4">
                            <span class="block font-medium text-slate-800">{item.nome}</span>
                            <span class="block text-xs text-slate-400">{item.descricao || '-'}</span>
                        </td>
                        <td class="p-4">
                            <span class="px-2 py-1 bg-slate-100 text-slate-600 rounded text-xs font-medium border border-slate-200">
                                {item.categoria_nome || 'Geral'}
                            </span>
                        </td>
                        <td class="p-4 text-right">
                            <span class="text-lg font-bold text-slate-700">{item.estoque_atual}</span>
                            <span class="text-xs text-slate-400 font-medium ml-1">{item.unidade_medida}</span>
                        </td>
                        <td class="p-4 text-center">
                            {Number(item.estoque_atual) <= Number(item.estoque_minimo) 
                                ? <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 border border-red-200">Crítico</span>
                                : <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 border border-green-200">Normal</span>
                            }
                        </td>
                    </tr>
                ))}
            </tbody>
        </table>
        {itens.length === 0 && <div class="p-8 text-center text-slate-500">Nenhum produto cadastrado.</div>}
    </div>
</Layout>