---
import Layout from '../../layouts/Layout.astro';
import sql from '../../lib/db.js';

const { id } = Astro.params;

// Busca Compra
const [compra] = await sql`
    SELECT c.*, f.nome as fornecedor_nome 
    FROM compras c JOIN fornecedores f ON c.fornecedor_id = f.id 
    WHERE c.id = ${id}
`;

// Busca Itens
const itens = await sql`SELECT * FROM compra_itens WHERE compra_id = ${id}`;

// Busca Histórico (Auditoria)
const historico = await sql`
    SELECT * FROM audit_logs 
    WHERE entidade = 'compra' AND entidade_id = ${id} 
    ORDER BY data_log DESC
`;

// Controle de Abas (Visual simples via URL ou JS)
// Aqui faremos com JS simples para alternar visibilidade
---

<Layout title={`Compra #${id}`}>
    <div class="mb-6 flex justify-between items-center">
        <div>
            <h1 class="text-2xl font-bold text-slate-800">Compra #{id}</h1>
            <p class="text-slate-500">{compra.fornecedor_nome}</p>
        </div>
        <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm font-bold">
            {compra.status_geral || 'Registrada'}
        </span>
    </div>

    <div class="border-b border-slate-200 mb-6">
        <nav class="-mb-px flex gap-6">
            <button onclick="switchTab('detalhes')" id="tab-detalhes" class="border-b-2 border-blue-500 py-4 px-1 text-sm font-medium text-blue-600 hover:text-blue-800">
                Detalhes da Compra
            </button>
            <button onclick="switchTab('historico')" id="tab-historico" class="border-b-2 border-transparent py-4 px-1 text-sm font-medium text-slate-500 hover:text-slate-700 hover:border-slate-300">
                Histórico de Edição
            </button>
        </nav>
    </div>

    <div id="content-detalhes" class="block">
        <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
            <div class="px-4 py-5 sm:px-6 bg-slate-50">
                <h3 class="text-lg leading-6 font-medium text-slate-900">Itens Adquiridos</h3>
            </div>
            <ul class="divide-y divide-slate-200">
                {itens.map(item => (
                    <li class="px-4 py-4 sm:px-6 flex justify-between">
                        <span>{item.quantidade}x Produto ID {item.produto_id}</span>
                        <span class="font-bold">R$ {item.valor_total_item}</span>
                    </li>
                ))}
            </ul>
        </div>
    </div>

    <div id="content-historico" class="hidden">
        <div class="flow-root">
            <ul role="list" class="-mb-8">
                {historico.map((log, index) => (
                    <li>
                        <div class="relative pb-8">
                            {index !== historico.length - 1 && <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-slate-200" aria-hidden="true"></span>}
                            <div class="relative flex space-x-3">
                                <div>
                                    <span class="h-8 w-8 rounded-full bg-slate-400 flex items-center justify-center ring-8 ring-white">
                                        <svg class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                                        </svg>
                                    </span>
                                </div>
                                <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
                                    <div>
                                        <p class="text-sm text-slate-500">
                                            <span class="font-medium text-slate-900">{log.usuario_nome}</span> 
                                            realizou uma ação de <span class="font-bold">{log.acao}</span>
                                        </p>
                                        <p class="text-xs text-slate-400 mt-1">{log.detalhes}</p>
                                    </div>
                                    <div class="text-right text-sm whitespace-nowrap text-slate-500">
                                        <time>{new Date(log.data_log).toLocaleString('pt-BR')}</time>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                ))}
                {historico.length === 0 && <p class="text-slate-500 p-4">Nenhum histórico registrado ainda.</p>}
            </ul>
        </div>
    </div>

    <script is:inline>
        function switchTab(tabName) {
            // Esconde tudo
            document.getElementById('content-detalhes').classList.add('hidden');
            document.getElementById('content-historico').classList.add('hidden');
            
            // Reseta estilos botões
            document.getElementById('tab-detalhes').className = "border-b-2 border-transparent py-4 px-1 text-sm font-medium text-slate-500 hover:text-slate-700";
            document.getElementById('tab-historico').className = "border-b-2 border-transparent py-4 px-1 text-sm font-medium text-slate-500 hover:text-slate-700";

            // Ativa o selecionado
            document.getElementById('content-' + tabName).classList.remove('hidden');
            document.getElementById('tab-' + tabName).className = "border-b-2 border-blue-500 py-4 px-1 text-sm font-medium text-blue-600";
        }
    </script>
</Layout>