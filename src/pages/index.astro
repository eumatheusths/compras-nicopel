---
// src/pages/index.astro (DASHBOARD)
import Layout from '../layouts/Layout.astro'; // Note que aqui é apenas ../
import sql from '../lib/db.js';

// Buscas no Banco de Dados
const [gastosMes] = await sql`
    SELECT COALESCE(SUM(valor_total), 0) as total 
    FROM compras 
    WHERE date_trunc('month', data_compra) = date_trunc('month', CURRENT_DATE)
`;

const [pendentes] = await sql`
    SELECT COUNT(*) as qtd, COALESCE(SUM(valor_parcela), 0) as valor
    FROM contas_pagar 
    WHERE status = 'pendente' AND data_vencimento <= CURRENT_DATE + 30
`;

const proximasContas = await sql`
    SELECT c.nome as fornecedor, cp.valor_parcela, cp.data_vencimento, cp.status, cp.numero_parcela
    FROM contas_pagar cp
    JOIN compras comp ON cp.compra_id = comp.id
    JOIN fornecedores c ON comp.fornecedor_id = c.id
    WHERE cp.status = 'pendente'
    ORDER BY cp.data_vencimento ASC
    LIMIT 5
`;
---

<Layout title="Dashboard">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white p-6 rounded-xl border border-slate-100 shadow-sm flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-slate-500">Gastos do Mês</p>
                <h3 class="text-2xl font-bold text-slate-800 mt-1">R$ {Number(gastosMes.total).toLocaleString('pt-BR', {minimumFractionDigits: 2})}</h3>
            </div>
            <div class="p-3 bg-blue-50 text-blue-600 rounded-lg">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            </div>
        </div>

        <div class="bg-white p-6 rounded-xl border border-slate-100 shadow-sm flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-slate-500">Contas Pendentes</p>
                <h3 class="text-2xl font-bold text-slate-800 mt-1">R$ {Number(pendentes.valor).toLocaleString('pt-BR', {minimumFractionDigits: 2})}</h3>
                <span class="text-xs text-orange-600 font-medium bg-orange-50 px-2 py-1 rounded mt-2 inline-block">{pendentes.qtd} boletos</span>
            </div>
            <div class="p-3 bg-orange-50 text-orange-600 rounded-lg">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-slate-200">
        <div class="p-6 border-b border-slate-100 flex justify-between items-center">
            <h3 class="font-bold text-lg text-slate-800">Próximos Pagamentos</h3>
            <a href="/compras/nova" class="bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700 transition shadow-sm shadow-blue-200">
                + Nova Compra
            </a>
        </div>
        
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead class="bg-slate-50 text-slate-500 uppercase text-xs font-semibold tracking-wider">
                    <tr>
                        <th class="px-6 py-4">Fornecedor</th>
                        <th class="px-6 py-4">Parcela</th>
                        <th class="px-6 py-4">Valor</th>
                        <th class="px-6 py-4">Vencimento</th>
                        <th class="px-6 py-4">Status</th>
                        <th class="px-6 py-4 text-right">Ação</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    {proximasContas.map((conta) => (
                        <tr class="hover:bg-slate-50 transition-colors">
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    <div class="w-8 h-8 rounded bg-slate-100 flex items-center justify-center text-slate-500 font-bold text-xs">
                                        {conta.fornecedor.substring(0,2).toUpperCase()}
                                    </div>
                                    <span class="font-medium text-slate-700">{conta.fornecedor}</span>
                                </div>
                            </td>
                            <td class="px-6 py-4 text-sm text-slate-500">{conta.numero_parcela}</td>
                            <td class="px-6 py-4 font-medium text-slate-700">R$ {Number(conta.valor_parcela).toLocaleString('pt-BR', {minimumFractionDigits: 2})}</td>
                            <td class="px-6 py-4 text-sm text-slate-600">
                                {new Date(conta.data_vencimento).toLocaleDateString('pt-BR')}
                            </td>
                            <td class="px-6 py-4">
                                <span class="px-3 py-1 rounded-full text-xs font-semibold bg-orange-100 text-orange-700 border border-orange-200">
                                    A Vencer
                                </span>
                            </td>
                            <td class="px-6 py-4 text-right">
                                <button class="text-slate-400 hover:text-blue-600 transition">
                                    ...
                                </button>
                            </td>
                        </tr>
                    ))}
                    {proximasContas.length === 0 && (
                        <tr><td colspan="6" class="px-6 py-8 text-center text-slate-400">Nenhuma conta pendente.</td></tr>
                    )}
                </tbody>
            </table>
        </div>
    </div>
</Layout>