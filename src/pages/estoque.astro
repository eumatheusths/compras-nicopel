---
import Layout from '../layouts/Layout.astro';
import sql from '../lib/db.js';

const itens = await sql`
    SELECT p.*, c.nome as categoria_nome 
    FROM produtos p
    LEFT JOIN categorias c ON p.categoria_id = c.id
    ORDER BY p.nome ASC
`;
---

<Layout title="Controle de Estoque">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-slate-800">Estoque Atual</h1>
        <button class="bg-emerald-600 text-white px-4 py-2 rounded text-sm font-medium hover:bg-emerald-700">
            + Ajuste Manual
        </button>
    </div>

    <div class="bg-white rounded-lg shadow border border-slate-200 overflow-hidden">
        <table class="w-full text-left border-collapse">
            <thead class="bg-slate-100 text-slate-600 uppercase text-xs font-bold">
                <tr>
                    <th class="p-4 border-b">Produto</th>
                    <th class="p-4 border-b">Categoria</th>
                    <th class="p-4 border-b text-right">Estoque Atual</th>
                    <th class="p-4 border-b text-center">Status</th>
                    <th class="p-4 border-b"></th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
                {itens.map((item, index) => (
                    <tr class={index % 2 === 0 ? 'bg-white hover:bg-slate-50' : 'bg-slate-50 hover:bg-slate-100'}>
                        <td class="p-4 font-medium text-slate-800">
                            {item.nome}
                            <span class="block text-xs text-slate-400 font-normal">{item.descricao}</span>
                        </td>
                        <td class="p-4 text-slate-500 text-sm">
                            <span class="px-2 py-1 bg-slate-200 rounded text-xs">
                                {item.categoria_nome || 'Geral'}
                            </span>
                        </td>
                        <td class="p-4 text-right font-mono font-bold text-slate-700">
                            {item.estoque_atual} <span class="text-xs text-slate-400 font-normal">{item.unidade_medida}</span>
                        </td>
                        <td class="p-4 text-center">
                            {Number(item.estoque_atual) <= Number(item.estoque_minimo) 
                                ? <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Crítico</span>
                                : <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Normal</span>
                            }
                        </td>
                        <td class="p-4 text-right">
                            <a href="#" class="text-blue-600 hover:text-blue-900 text-sm font-medium">Histórico</a>
                        </td>
                    </tr>
                ))}
            </tbody>
        </table>
    </div>
</Layout>