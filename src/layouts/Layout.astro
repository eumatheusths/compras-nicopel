---
import '../styles/global.css';
const { title } = Astro.props;
const user = Astro.locals.user || { nome: 'Visitante' }; // Pega do Middleware
const currentPath = Astro.url.pathname;
---
<body class="font-sans">
    <div class="flex h-screen overflow-hidden bg-slate-50">
        <aside class="w-64 bg-[#0F172A] text-white flex flex-col flex-shrink-0">
            <div class="p-6 flex items-center gap-3 border-b border-slate-800">
                <div class="w-10 h-10 bg-blue-600 rounded flex items-center justify-center font-bold text-xl shadow-lg">
                    SC
                </div>
                <div>
                    <h1 class="font-bold text-sm tracking-wide leading-tight">SISTEMA DE<br/>COMPRAS</h1>
                </div>
            </div>

            <nav class="flex-1 px-4 py-4 space-y-1 overflow-y-auto">
                <a href="/" class="flex items-center gap-3 px-4 py-3 text-sm font-medium text-slate-400 hover:text-white hover:bg-slate-800 rounded-lg">Dashboard</a>
                <a href="/compras" class="flex items-center gap-3 px-4 py-3 text-sm font-medium text-slate-400 hover:text-white hover:bg-slate-800 rounded-lg">Compras</a>
            </nav>

            <div class="p-4 border-t border-slate-800 bg-slate-900/50">
                <p class="text-xs text-slate-500 mb-1">Logado como:</p>
                <p class="text-sm font-bold text-white truncate">{user.nome}</p>
                <form action="/api/logout" method="POST" class="mt-2">
                    <button class="text-xs text-red-400 hover:text-red-300">Sair do sistema</button>
                </form>
            </div>
        </aside>
        
        <main class="flex-1 overflow-y-auto p-8">
            <slot />
        </main>
    </div>
</body>